{
  "expo": {
    "name": "ArenaControl",
    "slug": "arenacontrol",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/LogoArenaControl.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/LogoArenaControl.png",
      "resizeMode": "contain",
      "backgroundColor": "#003366"
    },
    "extra": {
      "apiUrl": "http://192.168.1.76:3000",
      "eas": {
        "projectId": "4578e0f4-c6c7-48c2-8f06-b6d2ab11de7e"
      }
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yuriferreira.arenacontrol"
    },
    "android": {
      "package": "com.yuriferreira.arenacontrol",
      "permissions": [
        "BLUETOOTH",
        "BLUETOOTH_ADMIN",
        "BLUETOOTH_CONNECT",
        "BLUETOOTH_SCAN",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "android.permission.BLUETOOTH",
        "android.permission.BLUETOOTH_ADMIN",
        "android.permission.BLUETOOTH_CONNECT"
      ],
      "adaptiveIcon": {
        "foregroundImage": "./assets/LogoArenaControl.png",
        "backgroundColor": "#003366"
      }
    },
    "web": {
      "favicon": "./assets/LogoArenaControl.png"
    },
    "plugins": [
      [
        "react-native-ble-plx",
        {
          "isBackgroundEnabled": true,
          "modes": [
            "peripheral",
            "central"
          ],
          "bluetoothAlwaysPermission": "Allow $(PRODUCT_NAME) to connect to bluetooth devices"
        }
      ],
      "expo-font"
    ]
  }
}
